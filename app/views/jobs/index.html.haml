.page-header
  %h1
    Jawatan
    %small
      Senarai jawatan yang anda iklankan

.row
  .span12
    %table.table.table-striped
      %thead
        %tr
          %th #
          %th Lokasi
          %th Gred
          %th Nama Organisasi
          %th Tarikh Luput
          %th Status
          %th Tarikh Dibuat
          %th
      %tbody
        - @jobs.each.with_index do |job, index|
          %tr
            %td= index + 1
            %td
              = job.location.nama
              = job.location.state.nama
            %td= job.gred
            %td= job.nama_organisasi
            %td= job.expired_at
            %td
            %td= time_ago_in_words(job.created_at)
            %td
              = link_to 'Show', job
              = link_to 'Edit', edit_job_path(job)
              = link_to 'Destroy', job, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Job', new_job_path
