= form_for [:admin, @title] do |f|
  -if @title.errors.any?
    #error_explanation
      %h2= "#{pluralize(@title.errors.count, "error")} prohibited this title from being saved:"
      %ul
        - @title.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nama
    = f.text_field :nama
  .actions
    = f.submit 'Save'
