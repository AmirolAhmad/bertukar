= form_for [:admin, @ministry], html: { class: "form-horizontal" } do |f|
  - if @ministry.errors[:base].any?
    .alert.alert-error
      %button.close{ :"type" => "button", :"data-dismiss" => "alert" }
        = raw("&times;")
      %h4 Errors
      %ul
        - @ministry.errors[:base].each do |msg|
          %li= msg

  .row
    = normal_div_if @ministry.errors[:nama].empty? do
      = f.label :nama, class: "control-label"
      .controls
        = f.text_field :nama, class: "input-xlarge", placeholder: "Kementerian Pengajian Tinggi"
        %span.help-inline
          = @ministry.errors[:nama].join(", ")

    = normal_div_if @ministry.errors[:is_aktif].empty? do
      .controls
        = f.label :is_aktif, class: "checkbox" do
          = f.check_box :is_aktif
          Aktif

    .form-actions
      = f.submit 'Save', class: "btn btn-primary"