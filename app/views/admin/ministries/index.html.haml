.page-header
  %h1.pull-left
    Senarai Kementerian
  .page-actions.pull-right
    = link_to "Kementerian Baru", new_admin_ministry_path, class: "btn btn-primary"
  .clearfix

.row-fluid
  .span12
    - if @ministries.length > 0
      %table.table.table-striped
        %thead
          %tr
            %th #
            %th Nama
            %th Aktif
            %th
        %tbody
          - @ministries.each_with_index do |ministry, index|
            %tr
              %td= index + 1
              %td= ministry.nama
              %td= ministry.is_aktif.to_s.upcase
              %td.right
                .btn-group
                  = link_to [:admin, ministry], class: "btn btn-small" do
                    %i.icon-eye-open
                  = link_to edit_admin_ministry_path(ministry), class: "btn btn-small" do
                    %i.icon-pencil
                  = link_to [:admin, ministry], :data => { :confirm => 'Are you sure?' }, :method => :delete, class: "btn btn-small btn-danger" do
                    %i.icon-trash.icon-white
    - else
      Tiada kementerian.
