.page-header
  %h1
    Akaun
    %small
      Kemaskini akaun anda

.row-fluid
  .span12
    = form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal" } do |f|
      %fieldset

      = normal_div_if resource.errors[:full_name].empty? do
        = f.label "Nama penuh", class: "control-label"
        .controls
          = f.text_field :full_name, placeholder: "Muhammad bin Ali"
          %span.help-inline
            = resource.errors[:full_name].join(", ")

      = normal_div_if resource.errors[:phone].empty? do
        = f.label "Telefon", class: "control-label"
        .controls
          = f.text_field :phone, class: "span3", placeholder: "0199123456"
          %span.help-inline
            = resource.errors[:phone].join(", ")

      = normal_div_if resource.errors[:email].empty? do
        = f.label :email, class: "control-label"
        .controls
          = f.email_field :email
          %span.help-inline
            = resource.errors[:email].join(", ")

      = normal_div_if resource.errors[:password].empty? do
        = f.label :password, class: "control-label"
        .controls
          = f.password_field :password
          %span.help-inline
            - if resource.errors[:password].blank?
              %p.help-block
                Tinggalkan kosong jika anda tidak mahu mengubah kata laluan
            - else
              = resource.errors[:password].join(", ")

      = normal_div_if resource.errors[:password_confirmation].empty? do
        = f.label :password_confirmation, class: "control-label"
        .controls
          = f.password_field :password_confirmation
          %span.help-inline
            = resource.errors[:password_confirmation].join(", ")

      = normal_div_if resource.errors[:current_password].empty? do
        = f.label :current_password, class: "control-label"
        .controls
          = f.password_field :current_password
          %span.help-inline
            - if resource.errors[:current_password].blank?
              %p.help-block
                Sila isi kata laluan anda untuk pengesahan akaun
            - else
              = resource.errors[:current_password].join(", ")

      .form-actions
        = f.submit "Kemaskini", class: "btn btn-primary"
